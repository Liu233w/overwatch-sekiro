import "block.del";
import "posture.del";

rule: "is idle all the time"
Event.OngoingPlayer
Player.Zenyatta
if (IsAlive(EventPlayer()))
if (!IsDeadlyStunned(EventPlayer()))
{
    OnIdle(EventPlayer());
}

rule: "off idle when dead or stunned"
Event.OngoingPlayer
Player.Zenyatta
if (!IsAlive(EventPlayer()) || IsDeadlyStunned(EventPlayer()))
{
    OffIdle(EventPlayer());
}

